<%- include ("../partials/header") %>
<div class="container">
	
		<h1 class="my-4" style="text-align:center;">Create a New Campground</h1>
		<div style="width: 40%; margin:40px auto">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">	
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="price" min="1" step="0.1">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="img url">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="description" placeholder="about Campground"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
		</div>
		<div style="width: 30%; margin:0 auto">
			<a href="/campgrounds">Go Back</a>
		</div>
	
</div>

<%- include ("../partials/footer") %>
